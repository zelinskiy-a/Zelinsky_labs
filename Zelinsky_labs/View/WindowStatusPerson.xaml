<Window x:Class="Zelinsky_labs.View.WindowStatusPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zelinsky_labs.View"
        mc:Ignorable="d"
        Title="Cтатус" Height="450" Width="800">
    <ListView x:Name="lvPerson">
        <ListView.View>
            <GridView>
                <GridView.Columns>
                    <GridViewColumn Header="Номер" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Статус" Width="100" DisplayMemberBinding="{Binding Status}"/>
                </GridView.Columns>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
